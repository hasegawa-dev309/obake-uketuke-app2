# Database (Supabase)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Environment
NODE_ENV=production

# API Mode and Base URL
# Development: VITE_API_MODE=mock, VITE_API_BASE=http://localhost:3001
# Production: VITE_API_MODE=prod, VITE_API_BASE=/api
VITE_API_MODE=prod
VITE_API_BASE=/api

# Legacy API Base URL (for external services if needed)
VITE_API_BASE_URL=https://your-app.vercel.app 